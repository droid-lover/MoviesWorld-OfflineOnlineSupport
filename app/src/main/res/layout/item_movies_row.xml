<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movie_parent_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/item_movie_iv"
                android:layout_width="65dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_movie_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_movie_rating_relase_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_ll"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_movie_rating_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/item_movie_release_year_tv"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/item_movie_position_tv"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>